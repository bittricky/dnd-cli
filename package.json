{
  "name": "dnd-cli",
  "version": "1.0.0",
  "description": "A CLI tool for D&D 5e game masters",
  "type": "module",
  "main": "index.js",
  "bin": {
    "dnd-cli": "index.js",
    "dnd": "index.js"
  },
  "scripts": {
    "start": "node index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "format": "prettier --write \"./**/*.{js,json}\""
  },
  "keywords": [
    "dnd",
    "cli",
    "rpg",
    "dungeons-and-dragons"
  ],
  "author": {
    "name": "Mitul Patel",
    "email": "me@mitulpa.tel",
    "url": "https://mitulpa.tel"
  },
  "license": "MIT",
  "files": [
    "index.js",
    "utils",
    "src"
  ],
  "dependencies": {
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.3",
    "inquirer": "^9.2.12",
    "meow": "^13.2.0",
    "cli-alerts": "^2.0.0",
    "cli-handle-error": "^4.4.0",
    "cli-handle-unhandled": "^1.1.1",
    "cli-meow-help": "^4.0.0",
    "cli-welcome": "^3.0.0",
    "get-package-json-file": "^2.0.0",
    "boxen": "^7.1.1",
    "ora": "^8.0.1",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^1.2.1",
    "@vitest/ui": "^1.2.1",
    "vitest": "^1.2.1",
    "prettier": "^3.4.2"
  }
}
